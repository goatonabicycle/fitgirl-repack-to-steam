{
  "name": "Fitgirl repack to Steam",
  "short_name": "FGR-to-Steam",
  "description": "This links FitGirl Repacks entries to their Steam pages. Maybe you should buy this one?",
  "version": "0.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "*://*.fitgirl-repacks.site/*",
    "*://*.steampowered.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.fitgirl-repacks.site/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ]
}