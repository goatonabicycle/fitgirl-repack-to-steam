{
  "name": "fitgirl-repack-to-steam",
  "version": "1.0.0",
  "description": "This links FitGirl Repacks entries to their Steam pages. Maybe you should buy this one?",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip --browser firefox",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "icons": "node scripts/generate-icons.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "sharp": "^0.34.5",
    "wxt": "^0.19.0"
  }
}
